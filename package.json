{
  "name": "claudia",
  "private": true,
  "workspaces": [
    "packages/*",
    "clients/*",
    "extensions/*"
  ],
  "scripts": {
    "dev": "bun run --filter @claudia/gateway dev",
    "restart": "lsof -ti:30086 | xargs kill -9 2>/dev/null; sleep 0.5 && bun run dev",
    "dev:runtime": "bun run --watch packages/runtime/src/index.ts",
    "watchdog": "bun run scripts/watchdog.ts",
    "cli": "bun run packages/cli/src/index.ts",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:unit": "bun test packages/cli/src/index.test.ts packages/gateway/src/extensions.test.ts extensions/mission-control/src/index.test.ts",
    "test:integration": "bun test packages/gateway/src/extensions.integration.test.ts",
    "test:smoke": "bun run scripts/smoke.ts",
    "test:e2e": "bun run scripts/e2e-smoke.ts",
    "test:smoke-all": "bun run test:unit && bun run test:integration && bun run test:smoke",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "format": "oxfmt --write ."
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "1.3.6",
    "oxlint": "latest",
    "typescript": "^5.7.0"
  }
}
