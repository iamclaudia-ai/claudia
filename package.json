{
  "name": "claudia",
  "private": true,
  "workspaces": [
    "packages/*",
    "clients/*",
    "extensions/*"
  ],
  "scripts": {
    "dev": "bun run --filter @claudia/gateway dev",
    "dev:runtime": "bun run --watch packages/runtime/src/index.ts",
    "watchdog": "bun run scripts/watchdog.ts",
    "cli": "bun run packages/cli/src/index.ts",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint .",
    "format": "oxfmt --write ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "1.3.6",
    "oxlint": "latest",
    "typescript": "^5.7.0"
  }
}
