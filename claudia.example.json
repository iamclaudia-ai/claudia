{
  // Claudia Gateway Configuration
  // Copy to claudia.json and customize

  "gateway": {
    "port": 3033,
    "host": "localhost"
  },

  "session": {
    // Default session settings (can be overridden per-request)
    "thinking": false,
    "thinkingBudget": 10000,
    "systemPrompt": null  // Or path to file: "./prompts/system.md"
  },

  "extensions": {
    // Voice Extension - ElevenLabs TTS
    "voice": {
      "enabled": true,
      "config": {
        "apiKey": "${ELEVENLABS_API_KEY}",
        "voiceId": "${ELEVENLABS_VOICE_ID}",
        "model": "eleven_turbo_v2_5",
        "autoSpeak": false,
        "summarizeThreshold": 150
      }
    },

    // Memory Extension (future)
    "memory": {
      "enabled": false,
      "config": {
        "vectorDbUrl": "http://anima-sedes:6333",
        "collection": "claudia-memory"
      }
    },

    // Browser Extension - DOMINATRIX (future)
    "browser": {
      "enabled": false,
      "config": {
        "dominatrixPath": "/opt/homebrew/bin/dominatrix"
      }
    },

    // iMessage Extension (future) - runs on Anima Sedes
    "imessage": {
      "enabled": false,
      "sourceRoutes": ["imessage"],  // Handles "imessage/*" sources
      "config": {
        "chatDbPath": "/Users/claudia/Library/Messages/chat.db",
        "allowedContacts": ["+15551234567", "michael@email.com"],
        "pollInterval": 1000
      }
    },

    // Slack Extension (example)
    "slack": {
      "enabled": false,
      "sourceRoutes": ["slack"],  // Handles "slack/*" sources
      "config": {
        "botToken": "${SLACK_BOT_TOKEN}",
        "appToken": "${SLACK_APP_TOKEN}"
      }
    }
  },

  "federation": {
    // Multi-gateway federation (future)
    "enabled": false,
    "nodeId": "laptop",
    "peers": [
      {
        "id": "anima-sedes",
        "url": "ws://anima-sedes:3033/ws",
        "role": "primary"
      }
    ]
  }
}
