{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "paths": {
      "*": ["./*"],
      "@claudia/shared": ["./packages/shared/src/index.ts"],
      "@claudia/gateway": ["./packages/gateway/src/index.ts"],
      "@claudia/ui": ["./packages/ui/src/index.ts"],
      "@claudia/*": [
        "./packages/*/src/index.ts",
        "./clients/*/src/index.ts",
        "./extensions/*/src/index.ts"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "clients/*/src/**/*.ts",
    "clients/*/src/**/*.tsx",
    "extensions/*/src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/dist/**"]
}
