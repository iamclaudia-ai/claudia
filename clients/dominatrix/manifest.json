{
  "manifest_version": 3,
  "name": "Claudia â€” DOMINATRIX",
  "version": "{VERSION}",
  "description": "She sees everything. She controls everything. She owns the DOM.",
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "cookies",
    "storage",
    "webRequest",
    "identity",
    "identity.email",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Claudia"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
